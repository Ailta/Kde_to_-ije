<html lang="cs" style="max-height: 100vh; max-width: 100vw">
<head style="flex: none">
    <%- include('partials/head'); %>
    <style>
        .map {
            height: 100%;
            width: 100%;
        }
    </style>
    <script src="https://cdn.maptiler.com/ol/v6.0.0/ol.js"></script>
</head>
<body style="display: flex; flex-direction: column; height: 100vh">
    <%- include('partials/header'); %>
    <div id="map" class="map"></div>
    <script type="text/javascript">
        var map = new ol.Map({
            target: 'map',
            layers: [
                new ol.layer.Tile({
                    source: new ol.source.OSM()
                })
            ],
            view: new ol.View({
                center: ol.proj.fromLonLat([15, 50]),
                zoom: 7
            })
        });

        // Function to handle click events on features
        function onFeatureClick(event) {
            var feature = map.forEachFeatureAtPixel(event.pixel, function(feature) {
                return feature;
            });

            if (feature) {
                // Display information about the clicked feature
                alert("You clicked on: " + feature.get('name')); // Assuming your GeoJSON has a 'name' property
            }
        }

        // Load GeoJSON data
        var geojsonLayer = new ol.layer.Vector({
            source: new ol.source.Vector({
                url: 'https://services6.arcgis.com/ogJAiK65nXL1mXAW/arcgis/rest/services/Kina/FeatureServer/0/query?outFields=*&where=1%3D1&f=geojson', // Replace with your GeoJSON file path
                format: new ol.format.GeoJSON()
            })
        });

        map.addLayer(geojsonLayer);

        // Add event listener for clicks on the map
        map.on('singleclick', onFeatureClick);
    </script>
</body>
</html>
