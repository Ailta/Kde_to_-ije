<html lang="cs" style="max-height: 100vh; max-width: 100vw">
    <head style="flex: none">
        <%- include('partials/head'); %>
		<style>
			.map {
				height: 100%;
				width: 100%;
			}
		</style>
		<script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.15.1/build/ol.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.15.1/css/ol.css">
    </head>
    <body style="display: flex; flex-direction: column; height: 100vh">
        <%- include('partials/header'); %>
        <div id="map" class="map"></div>
		<script type="text/javascript">
			var kralovehradeckyKrajExtent = ol.proj.transformExtent([15.3, 50.1, 16.5, 50.8], 'EPSG:4326', 'EPSG:3857');

			var map = new ol.Map({
				target: 'map',
				layers: [
					new ol.layer.Tile({
						source: new ol.source.XYZ({
							url: 'https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=8YRNEfnZb0K6syftXksQ'
						})
					})
				],
				view: new ol.View({center: ol.proj.fromLonLat([15.48, 50.24]),
				zoom: 9,
				extent: kralovehradeckyKrajExtent,
				constainOnlyCenter: true,
				minZoom: 8,
				maxZoom: 18
				})
			});
			
			var point = new ol.layer.Vector({
				 source: new ol.source.Vector({
					 features: [
						 new ol.Feature({
							 geometry: new ol.geom.Point(ol.proj.fromLonLat([12.33816, 45.43393]))
						 })
					 ]
				 }),
			 });

        // Function to handle click events on features
        function onFeatureClick(event) {
            var feature = map.forEachFeatureAtPixel(event.pixel, function(feature) {
                return feature;
            });

            if (feature) {
                // Display information about the clicked feature
                alert("You clicked on: " + feature.get('name')); // Assuming your GeoJSON has a 'name' property
            }
        }

        // Load GeoJSON data
        var geojsonLayer = new ol.layer.Vector({
            source: new ol.source.Vector({
                url: 'https://services6.arcgis.com/ogJAiK65nXL1mXAW/arcgis/rest/services/Kina/FeatureServer/0/query?outFields=*&where=1%3D1&f=geojson', // Replace with your GeoJSON file path
                format: new ol.format.GeoJSON()
            })
        });

        map.addLayer(geojsonLayer);

        // Add event listener for clicks on the map
        map.on('singleclick', onFeatureClick);
    </script>
</body>
</html>
